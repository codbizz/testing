    // Get the current URL path and split it for comparison
    var path = window.location.pathname;
    
    // Iterate over each <a> tag inside the sidebar
    $('.sidebar .nav-link').each(function() {
        var href = $(this).attr('href');
        
        // Check if the current path starts with the href attribute value
        if (path.startsWith(href)) {
            // Add the 'active' class to the parent <li> element
            $(this).addClass('active');
            
            // Optional: If you want to expand the parent treeview menu, you can trigger click on it
            $(this).closest('.nav-item').addClass('menu-open');
        }
    });
});

</script>